<section id="DisplayBookSection">
  <h1>Books</h1>
  <% @books.each do |book| %>
    <p class="blog-date"><%= book.title %></p>
  <% end %>

</section>
<section id="AddNewBookSection">
  <h2>New book</h2>
  <%= form_for(@book) do |book| %>
      <h4>Title</h4>
      <%= book.text_field :title %>
      <h4>Body</h4>
      <%= book.text_area :body %>
      <%= book.submit 'Create Book' %>
  <% end %>
</section>
