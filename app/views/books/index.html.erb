<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<section id="DisplayBookSection">
  <h1>Books</h1>
  <table>
  <tr>
    <th>Title</th><th>Bnotody</th><th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
    <th><%= book.title %></th>
    <th><%= book.body %></th>
    <th><%= link_to "Show", book_path(book) %></th>
    <th><%= link_to "Edit", edit_book_path(book) %></th>
    <th><%= link_to "Destroy", book_path(book), method: :delete %></th>
    </tr>
  <% end %>
</table>
</section>

<section id="AddNewBookSection">
  <h2>New book</h2>
  <%= form_for(@book) do |book| %>
    <%= render 'layouts/error_messages', model: book.object %>
    <h4>Title</h4>
    <%= book.text_field :title %>
    <h4>Body</h4>
    <%= book.text_area :body %>
    <br>
    <%= book.submit 'Create Book' %>
  <% end %>
</section>
